<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include ../views/partials/head %>
    <link rel='stylesheet' href='/css/index.css' />
    <script src="js/login.js"></script>
  </head>
  <body ng-app="login">
    <h1><%= title %></h1>
    <p><%= __("Welcome") %> <%= title %></p>
    <div class="container" ng-controller="LoginController">
      <form class="col-sm-offset-4 col-sm-4 login-frame" name="loginForm">
        <input type="text" class="form-control form-margin-wide" placeholder="School ID" ng-model="user.id" required>
        <input type="password" class="form-control form-margin-wide" placeholder="Password" ng-model="user.password" required>
        <div class="item-center">
          <button class="btn btn-primary" ng-click="check(loginForm.$valid)"><%= __("Login") %></button>
        </div>
      </form>
    </div>
  </body>
</html>
