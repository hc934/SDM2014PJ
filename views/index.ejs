<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include ../views/partials/head %>
    <link rel='stylesheet' href='/css/index.css' />
    <script src="js/login.js"></script>
  </head>
  <body ng-app="login">
  <div class="container">
    <h1 class="text-center"><%= title %></h1>
    <p class="text-center"><%= __("Welcome") %> <%= title %></p>
    <div class="container" ng-controller="LoginController">
      <form class="col-sm-offset-4 col-sm-4 login-frame" name="loginForm">
      <div class="form-group">
        <label for="user.id">學號：</label>
        <input type="text" class="form-control form-margin-wide" placeholder="School ID" ng-model="user.id" name="user.id" required>
      </div>
      <div class="form-group">
        <label for="user.password">密碼：</label>
        <input type="password" class="form-control form-margin-wide" placeholder="Password" ng-model="user.password" name="user.password" required>
      </div>
      <p class="text-danger" ng-show="showMsg">{{message}}</p>
      <div class="item-center">
        <button class="btn btn-primary" ng-click="check(loginForm.$valid)"><%= __("Login") %></button>
      </div>
      </form>
    </div>
  </div>
  </body>
</html>
