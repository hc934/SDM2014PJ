<!DOCTYPE html>
<html lang="en">
<head>

  <% include ../views/partials/head %>

</head>

<body ng-app="profile">

  <% include ../views/partials/nav %>

  <div class="container" ng-controller="ProfileController">
    <div class="profile col-sm-8">
      <span class="col-sm-4">
        <img class="thumbnail" src="http://deaenij3kiw8r.cloudfront.net/system/users/avatars/141380/original/production-b3612f96cc66fee631be82853dd2c316-man_bartlett_bw.jpg?1369799811"/>
      </span>
      <span class="col-sm-8 name">{{me.name}}</span>
      <span class="col-sm-8 email">{{me.email}}</span>
      <span class="col-sm-8 phone">{{me.phone_mobile}}</span>
    </div>
    <ul class="col-sm-8 profile-experience">
      <div class="subtitle col-sm-12">Experience</div>
      <li class=" col-sm-12" ng-repeat="experience in me.experience">
        <span class="main">{{experience.position}}</span>
        <span class="sub">{{experience.org}}</span>
        <span class="sub">{{experience.dept}}</span>
        <span class="date">{{experience.startdate}} - {{experience.enddate}}</span>
      </li>
    </ul>
    <ul class="col-sm-8 profile-education">
      <div class="subtitle col-sm-12">Education</div>
      <li class=" col-sm-12" ng-repeat="education in me.education">
        <span class="main">{{education.degree}}</span>
        <span class="sub">{{education.institute}}</span>
        <span class="sub">{{education.dept}}</span>
        <span class="date">{{education.startdate}} - {{education.enddate}}</span>
      </li>
    </ul>
  </div>

  <% include ../views/partials/js %>

</body>
</html>