<!DOCTYPE html>
<html lang="en">
<head>

  <% include ../views/partials/head %>
    <link href="/css/forum.css" rel="stylesheet">
  <script src="/js/forum.js"></script>
</head>

<body ng-app="forum">

  <% include ../views/partials/nav %>

  <div class="container" ng-controller="ForumController">
    <div class="row">
    	<div class="col-sm-offset-3 col-sm-5 item-center">
    		<button class="btn btn-primary" onclick="location.href='/post'"><%= __("Post") %></button>
    	</div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-2 col-md-offset-3">
        <button class="btn btn-primary" onclick="location.href='/forum/like'"><%= __("SortByLikes") %></button>
      </div>
      <div class="col-md-offset-2 col-md-2 ">
        <button class="btn btn-primary" onclick="location.href='/forum/sort'"><%= __("SortByTime") %></button>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="article-list" ng-repeat="article in articles">
        <a ng-href="/article/{{article.article_id}}">
          <div class="col-sm-offset-3 col-sm-6 frame frame-border theme-article">
            <div class="col-sm-2 thumbnail">
              <img src="{{src}}">
            </div>
            <div class="col-sm-10">
              <div class="col-sm-12">
                <span class="name"> <a ng-href="/profile/{{article.user_id}}">{{article.user_name}}</a> </span>
                <span class="time"> {{article.post_time | date:'yyyy/MM/dd  h:mma'}} </span>
              </div>
              <div class="col-sm-12 padding-5">
                <span class="title"> {{article.title}} </span>
                <!--<span class="content"> {{article.content}} </span>-->
              </div>
            </div>
          <div class="right-top-corner"> 
              <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> {{article.like_num}} 
          </div>
          <a class="right-bottom-corner more" ng-href="/article/{{article.article_id}}"> 
              (<%= __("More") %>)
          </a>
          </div>
        <!-- <a class="more" ng-href="/article/{{article.article_id}}"><%= __("More") %></a> -->

      </div>
        </a>
      </div> 
      
    </div>
  </div>

  <% include ../views/partials/js %>

</body>
</html>