<!DOCTYPE html>
<html lang="en">
<head>

  <% include ../views/partials/head %>
  <link href="css/forum.css" rel="stylesheet">
  <script src="js/forum.js"></script>
</head>

<body ng-app="forum">

  <% include ../views/partials/nav %>

  <div class="container" ng-controller="ForumController">
  	<div class="col-sm-offset-3 col-sm-6 item-center">
  		<button class="btn btn-primary" onclick="location.href='/post'">張貼文章</button>
  	</div>
    <div class="col-sm-offset-3 col-sm-6 article" ng-repeat="article in articles">
      	<div>{{article.title}}</div>
    	<a class="article-more" ng-href="/articles/{{article.article_id}}">觀看更多</a>
    </div>

  </div>

  <% include ../views/partials/js %>

</body>
</html>