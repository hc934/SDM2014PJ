<!DOCTYPE html>
<html lang="en">
<head>

  <% include ../views/partials/head %>
  <script src="js/forum.js"></script>
</head>

<body ng-app="forum">

  <% include ../views/partials/nav %>

  <div class="container" ng-controller="ForumController">
    <div class="row">
    	<div class="col-sm-offset-3 col-sm-5 item-center">
    		<button class="btn btn-primary" onclick="location.href='/post'"><%= __("Post") %></button>
    	</div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-2 col-md-offset-3">
        <button class="btn btn-primary" onclick="location.href='/forum:like'">sort by like</button>
      </div>
      <div class="col-md-offset-2 col-md-2 ">
        <button class="btn btn-primary" onclick="location.href='/forum:sort'">sort by time</button>
      </div>
    </div>
    <br>
    <div class="row">
      <div ng-repeat="article in articles">
        <a style="color:black" ng-href="/article/{{article.article_id}}">
          <div class="col-sm-offset-3 col-sm-5 frame frame-border theme-article">
          
            <span class="name col-md-4">{{article.user_name}}</span>
            <div class="col-md-offset-10">{{article.like_num}} likes</div>
        
          <div class="">{{article.title}}</div>
          
          <div class="col-md-offset-8">{{article.post_time | date:'MM/dd @ h:mma'}}</div>
        <!-- <a class="more" ng-href="/article/{{article.article_id}}"><%= __("More") %></a> -->
      </div>
        </a>
      </div> 
      
    </div>
  </div>

  <% include ../views/partials/js %>

</body>
</html>